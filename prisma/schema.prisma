generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Diskusi {
  ID_Diskusi     String     @id @default(uuid())
  Penulis        String
  Judul          String
  Created_at     DateTime   @default(now())
  Updated_at     DateTime   @updatedAt
  Konten         String
  JumlahKomentar Int
  Keywords       String
  Komentar       Komentar[]
}

model Komentar {
  ID_Komentar     String   @id @default(uuid())
  diskusi         Diskusi  @relation(fields: [ID_Diskusi], references: [ID_Diskusi])
  ID_Diskusi      String
  Penulis         String
  Created_at      DateTime @default(now())
  Updated_at      DateTime @updatedAt
  Konten          String
  Jumlah_Upvote   Int
  Jumlah_Downvote Int
}

model Soal {
  ID_Soal          String             @id @default(uuid())
  Latsol           Latihan_Soal       @relation(fields: [ID_Latsol], references: [ID_Latsol])
  ID_Latsol        String
  pertanyaan       String
  jawaban_benar    String
  jawaban_salah1   String
  jawaban_salah2   String
  jawaban_salah3   String
  Jawaban_Pengguna Jawaban_Pengguna[]
}

model Jawaban_Pengguna {
  soal        Soal   @relation(fields: [ID_Soal], references: [ID_Soal])
  ID_Soal     String
  ID_Pengguna Int
  jawaban     String

  @@id([ID_Soal, ID_Pengguna])
}

model Latihan_Soal {
  ID_Latsol      String           @id @default(uuid())
  ID_Material    Int
  judul          String
  deksripsi      String
  Soal           Soal[]
  History_Latsol History_Latsol[]
}

model History_Latsol {
  Latsol      Latihan_Soal @relation(fields: [ID_Latsol], references: [ID_Latsol])
  ID_Latsol   String
  ID_Pengguna Int
  modified_at DateTime
  nilai       Int

  @@id([ID_Latsol, ID_Pengguna])
}
